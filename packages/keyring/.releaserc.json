{
	"extends": ".releaserc.base.json",
	"pkgRoot": "dist/packages/keyring",
	"tagFormat": "keyring-v${version}",
	"commitPaths": ["packages/keyring/*"],
	"branches": [
		"main",
		{
			"name": "next",
			"channel": "next",
			"prerelease": true
		},
		{
			"name": "beta",
			"channel": "beta",
			"prerelease": true
		},
		{
			"name": "alpha",
			"channel": "alpha",
			"prerelease": true
		}
	],
	"plugins": [
		"@semantic-release/commit-analyzer",
		"@semantic-release/release-notes-generator",
		[
			"@semantic-release/changelog",
			{
				"changelogFile": "packages/keyring/CHANGELOG.md"
			}
		],
		[
			"@semantic-release/npm",
			{
				"pkgRoot": "dist/packages/bip85"
			}
		],
		[
			"@semantic-release/git",
			{
				"assets": [
					"packages/keyring/package.json",
					"packages/keyring/CHANGELOG.md"
				],
				"message": "release(version): Release keyring ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
			}
		]
	]
}
