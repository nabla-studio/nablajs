{
	"name": "rn-keyring",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "packages/rn-keyring/src",
	"projectType": "library",
	"tags": [],
	"targets": {
		"build": {
			"executor": "@nx/vite:build",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "dist/packages/rn-keyring",
				"tsConfig": "packages/rn-keyring/tsconfig.lib.json",
				"project": "packages/rn-keyring/package.json",
				"entryFile": "packages/rn-keyring/src/index.ts",
				"external": [
					"react/jsx-runtime",
					"react-native",
					"react-native-quick-crypto",
					"react-native-mmkv"
				],
				"assets": [
					{
						"glob": "packages/rn-keyring/README.md",
						"input": ".",
						"output": "."
					}
				]
			}
		},
		"lint": {
			"executor": "@nx/linter:eslint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": [
					"packages/rn-keyring/**/*.{ts,tsx,js,jsx}",
					"packages/rn-keyring/package.json"
				]
			}
		},
		"test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/rn-keyring"
      }
    },
		"semantic-release": {
			"executor": "@theunderscorer/nx-semantic-release:semantic-release",
			"dependsOn": ["^build"],
			"options": {
				"github": true,
				"changelog": true,
				"npm": true,
				"tagFormat": "rn-keyring-v${VERSION}",
				"outputPath": "dist/packages/rn-keyring",
				"buildTarget": "${PROJECT_NAME}:build"
			}
		}
	}
}
