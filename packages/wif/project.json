{
	"name": "wif",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "packages/wif/src",
	"projectType": "library",
	"targets": {
		"build": {
			"executor": "@nrwl/js:tsc",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "dist/packages/wif",
				"main": "packages/wif/src/index.ts",
				"tsConfig": "packages/wif/tsconfig.lib.json",
				"assets": ["packages/wif/*.md"]
			}
		},
		"publish": {
			"executor": "nx:run-commands",
			"options": {
				"command": "node tools/scripts/publish.mjs wif {args.ver} {args.tag}"
			},
			"dependsOn": ["build"]
		},
		"lint": {
			"executor": "@nrwl/linter:eslint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": ["packages/wif/**/*.ts"]
			}
		},
		"test": {
			"executor": "@nrwl/jest:jest",
			"outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
			"options": {
				"jestConfig": "packages/wif/jest.config.ts",
				"passWithNoTests": true
			}
		},
		"release": {
			"executor": "nx:run-commands",
			"outputs": [],
			"options": {
				"command": "npx semantic-release-plus --extends ./packages/wif/.releaserc.json",
				"parallel": false
			}
		}
	},
	"tags": []
}
